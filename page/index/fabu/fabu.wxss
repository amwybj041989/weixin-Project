.bg{width: 100%;height: 339rpx;display: block;}
.append{height: 86rpx;width: 730rpx;background-color: #fff;border-radius: 10rpx;border: 1px solid #efefef;margin: 30rpx auto;clear: both;}
.append .img{height: 50rpx;width: 50rpx;display: block;margin:18rpx auto}
.icon_1{display: inline-block;width: 35rpx;height: 35rpx;margin-top: 15rpx;margin-left: 15rpx;float: left;}
.btn{height: 71rpx;line-height: 71rpx;float: left;width: 100%}
.toggle{font-size: 28rpx;color: #999999;display: inline-block;margin-left: 15rpx;float: left;}
.btn .button{width: 140rpx;height: 71rpx;background-color: #ff6f56;color: #fff;font-size: 30rpx;border: 0;border-radius: 0;float: right;}
.h1{margin-top: 10rpx;border-bottom: 1px solid #efefef;height: 62rpx;position: relative;text-indent: 50rpx;float: left;clear: both;width: 100%;line-height: 62rpx;color: #333333;font-size: 30rpx;}
.h1 .border{height: 30rpx;width: auto;border-left: 6rpx solid #ff6f56;position: absolute;top: 16rpx;left: 30rpx;}
.h_con{line-height: 50rpx;font-size: 28rpx;color: #333333;width: 720rpx;margin: auto;clear: both;position: relative;}
.h_con .san{width: 0;height: 0;border-left: 25rpx solid transparent;border-right: 25rpx solid transparent;border-top: 25rpx solid #ff6f56;position: absolute;right: 0;bottom: 0;transform: rotate(-45deg);}
.con{float: left;clear: both;min-height: 100rpx;width: 100%}
.bar{display: flex;justify-content: space-around;width: 100%;float: left;clear: both;padding: 26rpx 0;}
.bar .item{display: inline-block;text-align: center;background-color: #fff;border: 1px solid #cdcdcd;width: 100rpx;height: 50rpx;font-size: 28rpx;color: #999999;border-radius: 18rpx;position: relative;margin-left: 30rpx;line-height: 50rpx;}
.bar .true{background-color: #ff6f56;color: #fff;border:1px solid #ff6f56;}
.bar .hide{display: inline-block;width: 100rpx;height: 44rpx;position: absolute;top: 0;left: 0;opacity: 0;}
.bar .checkbox{position: relative;}
.h_con .p{padding: 20rpx 10rpx;width: 100%;line-height: 34rpx;height: 100rpx;}
.appendchild{position: fixed;left: 0;text-align: center;font-size: 36rpx;transition: all .5s;width: 100%;background-color: #fff;}
.appendchild .border{border-bottom: 1px solid #efefef;line-height: 100rpx;width: 100%}
.photo,.text,.video{position: relative;padding: 20rpx 30rpx;width: 750rpx;float: left;display: block;clear: both;}
.colse{position: absolute;top: 50%;right: 15%;transform: translateY(-50%);height: 50rpx;width: 50rpx;}
.photo .img,.video .img{width: 165rpx;height: 126rpx;}
.text{position: fixed;top: 0;left: 0;width: 100%;height: 100%;padding: 0;background-color: #fff;z-index: 99;}
.content{width: 100%;padding: 5rpx 20rpx;display: block;clear: both;float: left;margin-top: 10rpx;}
.write{width: 750rpx;padding: 20rpx 30rpx;position: relative;float: left;}
.success{display: inline;float: right;margin-right: 20rpx;}