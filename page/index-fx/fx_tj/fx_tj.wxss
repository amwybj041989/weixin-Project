.banner{height: 300rpx;margin: 0 auto;border: 0;border-radius: 20rpx;position: relative;width: 730rpx;overflow: hidden;}
.item{position: absolute;top: 0;left: 0;padding-left: 20rpx;text-indent: 6rpx;}
.font{font-size: 22rpx;color: #fff;display: inline-block;float: left;line-height: 50rpx;padding-right: 6rpx;}
.xin,.yan{height: 50rpx;width: 40rpx;float: left;}
.banner .img{height: 100%;width: 100%;}
.banner:after{display: block;float: left;content: "";clear: both;width: 100%;height: auto;}
.interesting{position: relative;width: 730rpx;margin: 10rpx auto 0;overflow: hidden;border-radius: 15rpx;border: 1px solid #edecec;}
.interesting .h1{float: left;height: 100rpx;width: 100rpx;margin: 10rpx 15rpx;}
.interesting .border{height: 80rpx;position: absolute;top: 50%;left: 130rpx;transform: translateY(-50%);border-right: 1px dashed #999999;}
.interesting .p{display: inline-block;float: left;font-size: 26rpx;text-indent: 40rpx;padding-top: 20rpx;}
.interesting .p .h2{display: inline;font-size: 22rpx;color: #ff735b;border: 1px solid #ff735b;border-radius: 8rpx;padding: 4rpx;margin-right: 10rpx;}
.list{padding: 15rpx 20rpx;width: 690rpx;margin: 10rpx auto 0;border: 1px solid #edecec;border-radius: 15rpx;}
.list .head{height: 60rpx;}
.list .head .img{height: 60rpx;width: 60rpx;top: 20rpx;border-radius: 50%;position: relative;float: left;}
.list .head .name{font-size: 26rpx;color: #333333;line-height: 60rpx;display: inline;float: left;text-indent: 8rpx;}
.list .head .block{display: inline;float: right;padding: 4rpx;font-size: 22rpx;}
.list .head .first{color: #ff6db4;border: 1px solid #ff6db4;border-radius: 10rpx;margin-right: 10rpx;}
.list .head .two{color: #73bfff;border: 1px solid #73bfff;border-radius: 10rpx;margin-right: 10rpx;}
.list .head .three{color: #fd8fa6;border: 1px solid #fd8fa6;border-radius: 10rpx;margin-right: 10rpx;}
.list .con{width: 100%;height: 230rpx;}
.list .h1{font-size: 28rpx;color: #000000;padding-top: 6rpx;padding-bottom: 12rpx;line-height: 36rpx;border-bottom: 1px solid #efefef;}
.time{font-size: 22rpx;color: #c5c5c5;line-height: 71rpx;display: inline;}
.list .foot{position: relative;}
.list .foot .item{right: 0;display: inline;left: inherit;margin-top: 10rpx;}
.list .foot .font{color: #333;}