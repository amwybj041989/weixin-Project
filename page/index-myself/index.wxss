.header{height: 420rpx;background-color: #ff6e56;position: relative;}
.header .wapper{width: 200rpx;height: 200rpx;border-radius: 50%;border:2px solid #fff;position: absolute;left: 50%;top: 41%;transform: translate(-50%,-50%);}
.header .wapper .myphoto{height: 188rpx;width: 188rpx;border-radius: 50%;position: absolute;left: 50%;top: 50%;transform: translate(-50%,-50%);}
.header .name{text-align: center;font-size: 28rpx;color: #fff;position: absolute;left: 0;top: 68%;text-align: center;display: block;width: 100%}
.header .ul{display: block;position: absolute;left: 50%;top: 79%;width: 610rpx; font-size: 28rpx;color: #fff;transform: translateX(-50%);}
.header .ul .li{width: 33.33%;float: left;line-height: 38rpx;}
.header .ul .border{border-left: 2rpx solid #fff;border-right: 2rpx solid #fff;width: 32%}
.header .ul .li .h1,.header .ul .li .span{width: 100%;text-align: center;}
.con{margin: 20rpx auto;width: 100%;background-color: #fff;}
.con .li{border-bottom: 1px solid #efefef;line-height: 85rpx;font-size: 30rpx;color: #333333;position: relative;}
.con .li .fl{float: left;margin-left: 25rpx;display: inline-block;height: 45rpx;width: 45rpx;margin-top: 20rpx;margin-right: 18rpx}
.con .li .fr{display: inline-block;height: 15rpx;width: 15rpx;transform: rotate(-45deg) translate(-50%,-50%);border-right: 1px solid #999999;border-bottom: 1px solid #999999;position: absolute;right: 15rpx;top: 40%;}