.header{height: 100rpx;background-color: #fff;text-align: center;}
.header .left,.header .right{display: inline-block;width: 240rpx;height: 60rpx;border: 1px solid #dedede;line-height: 60rpx;margin-top: 20rpx;}
.header .on{border: 1px solid #ff583c;color: #ff583c}
.header .left{border-top-left-radius: 20rpx;border-bottom-left-radius: 20rpx; }
.li{margin-top: 15rpx;}
.header .right{border-top-right-radius: 20rpx;border-bottom-right-radius: 20rpx; }
.li .photo{height: 75rpx;width: 75rpx;border:0;border-radius: 50%;display: inline-block;float: left;margin-left: 20rpx;}
.li .name{display: inline-block;font-size: 30rpx;color: #333333;line-height: 55rpx;float: left;width: 70%;text-indent: 45rpx;}
.li .content{display: inline-block;width: 570rpx;float: right;margin-right: 22rpx;background-color: #f8f8f8;color: #333;font-size: 26rpx;padding: 20rpx 15rpx;line-height: 50rpx;}
.li .content .me{display: inline;color: #000}
.li .title{float: right;display: inline-block;width: 100%;width: 600rpx;margin-right: 22rpx;background-color: #f8f8f8;color: #000;font-size: 26rpx;line-height: 30rpx;border-top: 1px solid #efefef;padding: 12rpx 0; text-indent: 15rpx;}
.foot{margin-top: 25rpx;border-top: 1px solid #efefef;line-height: 60rpx;color: #999999;font-size: 22rpx;display: inline-block;float: left;width: 100%;height: 60rpx;}
.foot .reply{float: right;margin-right: 30rpx;width: 45rpx;height: 45rpx;}
.foot .time{display: inline-block;text-indent: 140rpx;}